---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] bg-no-repeat bg-fixed w-fit sm:w-full">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		scroll-behavior: smooth;
	}

	body {;
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
